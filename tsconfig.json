{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "lib": ["ES2015","DOM"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "noImplicitAny": false,
    "sourceMap":true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts"]
}
